{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "rules": {
        "curly": ["error", "all"],
        "eqeqeq": ["error", "always"],
        "no-unused-vars": ["error", {
            "args": "after-used"
        }],
        "react/prop-types": ["off"]
    },
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "globals": {
        "React": true
    },
    "plugins": ["react"]
}